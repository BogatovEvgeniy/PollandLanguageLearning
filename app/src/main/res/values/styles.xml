<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/AppTheme</item>

    </style>

    <style name="AppToolbar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="AppTextView.MetaData">
        <item name="android:textSize">@dimen/meta_text_size</item>
    </style>/

    <style name="AppTextView.Main">
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="AppTextView.Secondary">
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="AppTextView.Main.Header">
        <item name="android:textColor">@color/itemFooterColor</item>
    </style>
</resources>
