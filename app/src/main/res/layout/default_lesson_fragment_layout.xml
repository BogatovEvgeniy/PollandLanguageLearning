<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        style="@style/AppTextView.Main.Header"
        android:id="@+id/defaultLessonHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:text="Header"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/itemFooterColor"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/defaultLessonWordsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/defaultLessonText"
        style="@style/AppTextView.Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>