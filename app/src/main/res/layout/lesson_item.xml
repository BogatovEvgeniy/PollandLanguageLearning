<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:background="@color/colorAccent">

        <TextView
            style="@style/AppTextView.MetaData"
            android:id="@+id/main_screen_lesson_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            tools:text="MetaData" />

        <TextView
            style="@style/AppTextView.Main"
            android:id="@+id/main_screen_lesson_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            tools:text="Data" />

        <TextView
            style="@style/AppTextView.Secondary"
            android:id="@+id/main_screen_lesson_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_footer_height"
            android:background="@color/itemFooterColor"
            android:gravity="center_vertical|end"
            tools:text="Desc" />
    </LinearLayout>
</android.support.v7.widget.CardView>